{
    "compilerOptions": {
        "strictNullChecks": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "target": "es5",
        "module": "es2015",
        "lib": [
            "dom",
            "es7"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}